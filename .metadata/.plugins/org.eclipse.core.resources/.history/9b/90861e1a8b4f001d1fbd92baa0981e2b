package HilosConContadorCompartido;

public class Constructor implements Runnable{
	String nombre;
	Piedras piedra;

	@Override
	public void run() {
		for(int i = 1; i < 6; i++) {
			piedra.colocar();
			System.out.println(nombre  +" ha consegido " + i + " cantidad de piedra. Â¡Tenemos un total de " + piedra.cantidad + " unidades de piedra!");
		}
	}
}
