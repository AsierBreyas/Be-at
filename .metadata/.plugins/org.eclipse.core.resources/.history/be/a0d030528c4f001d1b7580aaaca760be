package HilosConContadorCompartido;

public class Constructor implements Runnable{
	String nombre;
	Piedras piedra;
	
	public Constructor(String nombre, Piedras piedra){
		this.nombre = nombre;
		this.piedra = piedra;
	}

	@Override
	public void run() {
		for(int i = 1; i < 6; i++) {
			piedra.colocar();
			System.out.println(nombre  +" ha colocado " + i + " cantidad de piedra. Â¡Tenemos un total de " + piedra.cantidad + " unidades de piedra!");
		}
	}
}
