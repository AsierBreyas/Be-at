package HilosConContadorCompartido;

public class Mineros implements Runnable{
	
	String nombre;
	Piedras piedra;
	
	public Mineros(String nombre, Piedras piedra){
		this.nombre = nombre;
		this.piedra = piedra;
	}

	@Override
	public void run() {
		for(int i = 0; i < 5; i++) {
			piedra.picar();
			System.out.println(nombre  +" ha consegido " + (i + 1) + " cantidad de piedra. Â¡Tenemos un total de " + piedra.cantidad + " unidades de piedra!");
		}
	}
}