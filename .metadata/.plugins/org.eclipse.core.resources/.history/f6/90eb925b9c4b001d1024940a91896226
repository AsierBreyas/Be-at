package PruebaTarea;

public class Tarea {
	
	int tiempo;
	
	public Tarea(int tiempo) {
		this.tiempo = (tiempo * 1000)/2;
	}
	
	public void ejecutar() {
		try {
			System.out.println("Empieza la ejecuci칩n. Tendr치s un tiempo de " + tiempo * 2 + "para decir tus ultimas palabras");
			Thread.sleep(tiempo);
			System.out.println("Empieza la ejecuci칩n. Tendr치s un tiempo de " + tiempo + "para decir tus ultimas palabras");
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
