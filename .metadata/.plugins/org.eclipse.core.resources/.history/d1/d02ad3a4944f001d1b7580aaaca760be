package HilosConContadorCompartido;

public class Constructor extends Thread{
	String nombre;
	Piedras piedra;
	int num;
	
	public Constructor(String nombre, Piedras piedra, int num){
		this.nombre = nombre;
		this.piedra = piedra;
		this.num = num + 1;
	}

	@Override
	public void run() {
		for(int i = 1; i < num; i++) {
			piedra.colocar();
//			System.out.println(nombre  +" ha colocado " + i + " cantidad de piedra. Â¡Tenemos un total de " + piedra.cantidad + " unidades de piedra!");
		}
	}
}
