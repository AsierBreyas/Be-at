package HilosConContadorCompartido;

public class Mineros implements Runnable{
	
	String nombre;
	Integer contador;
	
	public Mineros(String nombre, Integer contador){
		this.nombre = nombre;
		this.contador = contador;
	}

	@Override
	public void run() {
		for(int i = 0; i < 5; i++) {
			contador++;
			System.out.println(nombre  +" ha consegido " + i + " cantidad de piedra. Â¡Tenemos un total de " + contador + " unidades de piedra!");
		}
	}
}